@model MoviesWebApplication.MoviesGenre

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити жанр "@Model.Genre?.Name" для фільму "@Model.Movie?.Name"?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class = "col-sm-10"> 
            @Html.DisplayFor(model => model.Movie.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="GenreMoviesList" asp-route-genreId="@ViewBag.CurrentGenre.Id">Повернутися назад</a>
    </form>
</div>
