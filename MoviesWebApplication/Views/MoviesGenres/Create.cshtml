@model MoviesWebApplication.MoviesGenre

<h1>Додавання фільму</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                <label>@ViewBag.CurrentGenre.Name</label>
                <input type="hidden" asp-for="GenreId" value="@ViewBag.CurrentGenre.Id" />
            </div>

            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class="form-control" asp-items="@ViewBag.MoviesList as SelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div> 
</div>

<div>
    <a asp-action="GenreMoviesList" asp-route-genreId="@ViewBag.CurrentGenre.Id">Повернутися назад</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
