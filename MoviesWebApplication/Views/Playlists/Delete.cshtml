@model MoviesWebApplication.Playlist
<h1>Ви впевнені, що хочете видалити підбірку "@ViewBag.CurrentPlaylist.Name"</h1>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="PlayList">Повернутися назад</a>
    </form>
</div>
