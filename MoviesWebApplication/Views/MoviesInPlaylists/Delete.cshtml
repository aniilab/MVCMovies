@model MoviesWebApplication.MoviesInPlaylist


<h3>Ви впевнені, що хочете видалити фільм "@ViewBag.CurrentMovie.Name" з підбірки "@ViewBag.CurrentPlaylist.Name"?</h3>
<div>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="PlaylistMovies" asp-route-playlistId="@ViewBag.CurrentPlaylist.Id">Повернутися назад</a>
    </form>
</div>
