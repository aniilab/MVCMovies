@model MoviesWebApplication.MoviesInPlaylist

<h4>Виберіть фільм, який ви хочете додати до збірки "@ViewBag.CurrentPlaylist.Name"</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlaylistId" class="control-label"></label>
                <label>"@ViewBag.CurrentPlaylist.Name"</label>
                <input type="hidden" asp-for="PlaylistId" value="@ViewBag.CurrentPlaylist.Id" />
            </div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class="form-control" asp-items="@ViewBag.MoviesList as SelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PlaylistMovies">Повернутися назад</a>
</div>

